<div class="forms">
    <h2>Create a new account </h2>

    <%= form_for @user do |u|%>
        <% if @user.errors.any? %>
            <h2><%= pluralize(@user.errors.count, "Error") %> kept you from moving forward</h2>
            <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        <% end%>
        <div class="input">
            <%= u.label :name %>
            <%= u.text_field :name %>
        </div>
        <div class="input">
            <%= u.label :email %>
            <%= u.text_field :email %>
        </div>
        <div class="input">
            <%= u.label :phone %>
            <%= u.number_field :phone %>
        </div>
            <%= u.submit 'Submit', class: "submit" %>
    <% end %>
</div>
