<h2>Welcome <%=@user.name %></h2>

<ul class="userheader">
    <li>Phone: <%= @user.phone%></li>
    <li>Email: <%= @user.email%></li>
    <li><%= link_to "new weather lookup", new_weather_path(:id => @user.id), class: "link" %></li>
    <li><%= link_to "Delete this account and all associated notifications", @user, method: :delete, class: "link" %></li>
</ul>

<ul>
    <% @weathers.each do |w|%>
        <div class="userweathers">
            <h4>Weather for <%= w.address %></h4>
            <li>Forecast - <%= w.weather %></li>
            <li>Temp: <%= w.temp %></li>
            <li>Precip probability: <%= w.precip_prb %></li>
            <li>Precipitation amount: <%= w.precip_amt %></li>
            <li>Humidity: <%= w.humidity %></li>
            <li>Wind speed: <%= w.wind_speed %></li>
            <li>Temp in one hour: <%= w.temp_one %></li>
            <li>Temp in two hour <%= w.temp_two %></li>
            <li>Temp in three hour <%= w.temp_three %></li>
            <li>Temp in four hour <%= w.temp_four %></li>
            <li>Temp in five hour <%= w.temp_five %></li>
            <li>Weekly summary: <%= w.weekly_summary %></li>
            <li><%= link_to "Delete this weather notification", w, method: :delete , class: "lastele" %></li>

            <li><%= link_to "Send this notification now",
            "/weathers-text/#{w.id}", method: :post, class: "lastele" %></li>

        </div>
    <% end %>
</ul>
